<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fundacionfavarolo.org.medicinta.paciente.TableroPaciente">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="true"
        android:alignmentMode="alignMargins"
        android:orientation="vertical"
        android:useDefaultMargins="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_rowWeight=".30">

            <Button
                android:id="@+id/contacto_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_weight=".50"
                android:text="@string/agenda_button" />

            <Button
                android:id="@+id/mensajes_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_weight=".50"
                android:text="@string/mensajes_button" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_rowWeight=".40">

            <Button
                android:id="@+id/consultar_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:text="@string/consultas_button" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".30">

            <Button
                android:id="@+id/calendario_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/calendario_button" />
        </TableRow>

    </GridLayout>

</RelativeLayout>
